{
    "files": [
        "src/main.ts",
        "src/app/app.ts",
        "src/app/app.module.ts"
    ],
    "compilerOptions": {
        "outDir": "./built",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [ "es2015", "dom" ],
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "es5"
    },
    "include": [
        "node_modules/*",
        "./src/**/*"
    ]
}